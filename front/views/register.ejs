<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Register</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="css/main.css" type="text/css"></link>
</head>

<body>
    <!-- navbar -->
    <div class="container">
        <%- include('navbar.ejs') %>
        <div class="alert alert-warning"><strong>Remember to use a password manager!</strong></div>
        <!-- to maintain the fields size: <div class="col-sm-12 col-lg-11 col-xl-9 col-xxl-8"> -->
        <form id="registerForm" method="POST" onsubmit="register(); return false;">
            <div class="mb-3 input-group">
                <label for="inputNick" class="input-group-text">Nickname</label>
                <input name="nick" type="text" class="form-control" id="inputNick" autocomplete="nickname" required>
            </div>
            <div class="mb-3 input-group">
                <label for="inputEmail" class="input-group-text">E-mail</label>
                <input name="email" type="email" class="form-control" id="inputEmail" aria-describedby="emailHelp" autocomplete="email" required>
                <label for="inputEmailConfirm" class="input-group-text">Repeat</label>
                <input name="emailConfirm" type="email" class="form-control" id="inputEmailConfirm" autocomplete="email" aria-describedby="emailHelp" required>
            </div>
            <div class="mb-3 input-group">
                <label for="inputPassword" class="input-group-text">Password</label>
                <input name="password" type="password" class="form-control" id="inputPassword" autocomplete="new-password" required>
                <label for="inputPasswordConfirm" class="input-group-text">Repeat</label>
                <input name="passwordConfirm" type="password" class="form-control" id="inputPasswordConfirm" autocomplete="new-password" required>
            </div>
            <div class="mb-3 input-group">
                <label for="inputFavHero" class="input-group-text">Favorite superhero</label>
                <select name="favHero" id="inputFavHero" class="form-select" aria-label="Select your favorite superhero">
                    <option selected>No answer</option>
                </select>
            </div>
            <button id="registerSubmit" type="submit" class="btn btn-primary">Submit</button>
        </form>
        <div class="divider-half"></div>
    </div>
    
    <script src="shared/lib.js"></script>
    <script src="js/navbar.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script src="js/register.js"></script>
</body>

</html>
