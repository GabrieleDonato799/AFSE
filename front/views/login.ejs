<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login</title>
    <meta name="description" content="Login to access your digital album."/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="css/main.css" type="text/css"></link>
</head>

<body>
    <div class="container">
        <%- include('navbar.ejs') %>

        <div class="card related-content">
            <div class="card-body">
                <h5>Welcome!</h5>
                <p class="card-text">Login now, your album is waiting for you!</p>
            </div>
        </div>
        <div class="rounded" style="background-color: white;">
            <img src="img/afse_logo.png" class="img-fluid mx-auto d-block g4 py-3" alt="..." style="width: 50%;">
        </div>
        <div class="divider-half"></div>
        <!-- to maintain the fields size: <div class="col-sm-12 col-lg-11 col-xl-9 col-xxl-8"> -->
        <form id="loginForm" method="POST" onsubmit="return false;">
            <div class="mb-3">
                <div class="input-group">
                    <label for="inputEmail" class="input-group-text">E-mail address</label>
                    <input name="email" type="email" class="form-control" id="inputEmail" aria-describedby="emailHelp" required>
                </div>
                
            </div>
            <div class="mb-3">
                <div class="input-group">
                    <label for="inputPassword" class="input-group-text">Password</label>
                    <input name="password" type="password" class="form-control" id="inputPassword" required>
                </div>
            </div>
            <button type="submit" class="btn btn-primary" onclick="login();">Submit</button>
          </form>
        
		<%- include('footer.ejs') %>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script src="shared/lib.js"></script>
    <script src="js/navbar.js"></script>
    <script src="js/login.js"></script>
</body>

</html>
