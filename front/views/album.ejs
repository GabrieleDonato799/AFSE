<!doctype html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Album</title>
	<meta name="description" content="Admire your supereheroes' digital album."/>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
	<link rel="stylesheet" href="css/main.css" type="text/css"></link>
</head>

<body class="">
	<div class="container ">
		<%- include('navbar.ejs') %>
		<!-- Search Bar -->
		<form onsubmit="return false;">
			<div class="mb-3">
				<div class="input-group">
					<label for="searchTerm" class="input-group-text">Which hero?</label>
					<input id="searchTerm" class="form-control" oninput="search(this.value)" type="text" class="form-control" placeholder="Search by name" aria-describedby="searchTermHelp">
					<label class="input-group-text">
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
							<path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
						</svg>
					</label>
				</div>
				<div class="input-group">
					<label for="checkPossessedCards" class="input-group-text">Possessed ones</label>
					<div class="input-group-text">
						<input id="checkPossessedCards" class="form-check-input mt-0" type="checkbox" value="" aria-label="Checkbox for showing possessed cards" onchange="updatedFlagsClbk()">
					</div>
					<label for="checkMissingCards" class="input-group-text">Missing ones</label>
					<div class="input-group-text">
						<input id="checkMissingCards" class="form-check-input mt-0" type="checkbox" value="" aria-label="Checkbox for showing missing cards" onchange="updatedFlagsClbk()">
					</div>
				</div>
            </div>
        </form>
		<div class="divider-half"></div>
		<!-- Album -->
		<h3 class="mx-1 px-3 rounded">Album</h3>
		<div class="row align-items-center content-box rounded m-1">
			<div class="col-auto">
				<div style="font-size: 2em;">Progress:</div>
			</div>
			<div class="col-6">
				<div id="albumProgress" class="progress d-none" role="progressbar" aria-label="Album completion progress" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" style="height: 3em;">
					<div class="progress-bar overflow-visible" style="width: 0%; font-size: 2.5em;">0/0</div>
				</div>
			</div>
		</div>
		<div class="divider-half"></div>
		<!-- Upper buttons -->
		<div class="row d-flex justify-content-around">
			<button name="prev_page_button" class="col-3 btn bg-light" onclick='previousPage();'><b>Previous</b></button>
			<button name="exchange_button" class="col-3 btn bg-danger text-light d-none" onclick='backToExchange();'><b>Back to exchange</b></button>
			<button name="sell_button" class="col-3 btn bg-danger text-light d-none" onclick="sell();"><b>Sell</b></button>
			<button name="next_page_button" class="col-3 btn bg-light" onclick='nextPage();'><b>Next</b></button>
		</div>
		<div class="divider-half"></div>
		<!-- Cards container -->
		<div id="container" class="row row-cols-2 g-4 d-flex justify-content-around">
			<%- include('supercard.ejs') %>
		</div>
		<div class="divider-half"></div>
		<!-- Lower buttons -->
		<div class="row d-flex justify-content-around">
			<button name="prev_page_button" class="col-3 btn bg-light" onclick='previousPage();'><b>Previous</b></button>
			<button name="exchange_button" class="col-3 btn bg-danger text-light d-none" onclick='backToExchange();'><b>Back to exchange</b></button>
			<button name="sell_button" class="col-3 btn bg-danger text-light d-none" onclick="sell();"><b>Sell</b></button>
			<button name="next_page_button" class="col-3 btn bg-light" onclick='nextPage();'><b>Next</b></button>
		</div>

		<%- include('footer.ejs') %>
	</div>
	
	<script src="shared/lib.js"></script>
	<script src="js/navbar.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
	<script src="js/album.js"></script>
</body>
</html>
