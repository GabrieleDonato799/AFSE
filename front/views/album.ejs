<!doctype html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Album</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
		integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<link rel="stylesheet" href="css/main.css" type="text/css"></link>
</head>

<body class="">
	<div class="container ">
		<%- include('navbar.ejs') %>
		<div class="divider-half"></div>
		<h3 class="mx-1 px-3 rounded">Album</h3>
		<div class="row align-items-center content-box rounded m-1">
			<div class="col-auto">
				<div style="font-size: 2em;">Progress:</div>
			</div>
			<div class="col-6">
				<div id="albumProgress" class="progress d-none" role="progressbar" aria-label="Album completion progress" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" style="height: 3em;">
					<div class="progress-bar overflow-visible" style="width: 0%; font-size: 2.5em;">0/0</div>
				</div>
			</div>
		</div>
		<div class="divider-half"></div>
		<!-- Upper buttons -->
		<div class="row d-flex justify-content-around">
			<button class="col-3 btn bg-light" onclick='previousPage();'><b>Previous</b></button>
			<button name="exchange_button" class="col-3 btn bg-danger text-light d-none" onclick='backToExchange();'><b>Back to exchange</b></button>
			<button name="sell_button" class="col-3 btn bg-danger text-light d-none" onclick="sell();"><b>Sell</b></button>
			<button class="col-3 btn bg-light" onclick='nextPage();'><b>Next</b></button>
		</div>
		<div class="divider-half"></div>
		<!-- Cards container -->
		<div id="container" class="row row-cols-2 g-4 d-flex justify-content-around">
			<%- include('supercard.ejs') %>
		</div>
		<div class="divider-half"></div>
		<!-- Lower buttons -->
		<div class="row d-flex justify-content-around">
			<button class="col-3 btn bg-light" onclick='previousPage();'><b>Previous</b></button>
			<button name="exchange_button" class="col-3 btn bg-danger text-light d-none" onclick='backToExchange();'><b>Back to exchange</b></button>
			<button name="sell_button" class="col-3 btn bg-danger text-light d-none" onclick="sell();"><b>Sell</b></button>
			<button class="col-3 btn bg-light" onclick='nextPage();'><b>Next</b></button>
		</div>
		<div class="divider-half"></div>
	</div>
	
	<script src="shared/lib.js"></script>
	<script src="js/navbar.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
		integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
		crossorigin="anonymous"></script>
	<script src="js/album.js"></script>
</body>
</html>
