<!doctype html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Super Exchange</title>
	<meta name="description" content="Exchange mighty figures with other people."/>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
	<link rel="stylesheet" href="css/main.css" type="text/css"></link>
</head>

<body>
	<!-- supercards -->
	<%- include('supercard.ejs') %>

	<div class="container  rounded">
		<%- include('navbar.ejs') %>
		
		<div class="row g-4 d-flex align-items-center">
			<div class="col-12">
				<div class="row justify-content-evenly">
					<button id="exchangeBtn" onclick="exchange();" class="col-5 btn bg-light bg-info:hover" disabled><b>Exchange</b></button>
					<button id="clearBtn" disabled onclick="clearState();" class="col-3 btn bg-light"><b>Clear</b></button>
					<button disabled onclick="swapState();" class="col-3 btn bg-light"><b>Swap</b></button>
				</div>
			</div>
			<div class="divider-quarter g-0"></div>
			<div class="col">
				<div class="row px-3">
					<h3 class="col-12 rounded">You offer</h3>
				</div>
				<div class="divider-half"></div>
				<div id="container_offered" class="row row-cols-2 g-4 d-flex justify-content-around d-flex align-items-center">
					<div id="supercard_offered" class="card col-6 col-sm-4 col-md-4 col-lg-3 col-xl-3 col-xxl-2 supercard scale-50">
						<div class="d-flex align-items-center" style="height: inherit;">
							<svg onclick="addOffered();" xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16"><path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/></svg>
						</div>
					</div>
				</div>
				<div class="divider-half"></div>
			</div>
			<!-- <div class="col-12 col-sm-12 col-md-4 col-lg-3 bg-dark"> -->
			<!-- <div class="divider"></div> -->
			<!-- <div class="col-12 bg-dark">
				<div class="row justify-content-evenly">
					<button onclick="exchange();" class="col-5 btn bg-light">Exchange</button>
					<button onclick="clearState();" class="col-3 btn bg-light">Clear</button>
					<button onclick="swapState();" class="col-3 btn bg-light">Swap</button>
				</div>
			</div> -->
			<!-- <div class="divider"></div> -->
			<div class="col">
				<div class="row px-3">
					<h3 class="col-12 rounded">You want</h3>
				</div>
				<div class="divider-half"></div>
				<div id="container_wanted" class="row row-cols-2 g-4 d-flex justify-content-around d-flex align-items-center">
					<div id="supercard_wanted" class="card col-6 col-sm-4 col-md-4 col-lg-3 col-xl-3 col-xxl-2 supercard">
						<div class="d-flex align-items-center" style="height: inherit;">
							<svg onclick="addWanted();" xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16" data-bs-toggle="modal" data-bs-target="#cardChooserModal"><path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/></svg>
						</div>
					</div>
				</div>
				<div class="divider-half"></div>
			</div>
		</div>

		<div class="divider"><hr></div>
		<h3 class="mx-1 px-3 rounded">Your trades</h3>
		<div class="divider-half"></div>
		<div id="container_trades" class="accordion">
			<div id="template_trade" class="accordion-item d-none">
				<h2 class="accordion-header">
					<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
						Trade 1
					</button>
				</h2>
				<div id="collapseOne" class="accordion-collapse collapse" data-bs-parent="#container_trades">
					<div class="accordion-body" style="background-color:var(--steel-blue)">
						<div class="row align-items-center bg-light">
							<div class="col trade-body">
								
							</div>
							<div class="col">
								<button class="btn bg-danger text-light delete-trade-btn">Delete trade</button>
								<div>You will get back the cards you offered.</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<%- include('footer.ejs') %>
	</div>
	
	<script src="shared/lib.js"></script>
	<script src="js/navbar.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
	<script src="js/exchange.js"></script>
</body>
</html>
